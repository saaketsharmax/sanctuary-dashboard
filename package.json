{
  "name": "sanctuary-ecosystem",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "dev:dashboard": "turbo dev --filter=@sanctuary/dashboard",
    "dev:community": "turbo dev --filter=@sanctuary/community",
    "dev:marketing": "turbo dev --filter=@sanctuary/marketing",
    "build:dashboard": "turbo build --filter=@sanctuary/dashboard",
    "build:community": "turbo build --filter=@sanctuary/community",
    "build:marketing": "turbo build --filter=@sanctuary/marketing",
    "clean": "turbo clean && rm -rf node_modules"
  },
  "devDependencies": {
    "turbo": "^2.5.0"
  },
  "packageManager": "npm@10.8.0",
  "engines": {
    "node": ">=18"
  }
}
